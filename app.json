{
  "expo": {
    "name": "Inventory APP",
    "slug": "inventory-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.inventory-app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "proxy": "http://<192.168.0.215>:<8000>"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Inventory APP to access your camera to scan product labels."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow ${name} to access your Face ID biometric data."
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow Inventory APP to access your Face ID biometric data."
        }
      ]
    ]
  }
}
